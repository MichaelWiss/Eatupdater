<div class="large-6 columns">
<%
eating_places = Hash.new{|k, v| k[v] = {}}

params = { term: 'Vietnamese',
           category_filter: 'restaurants'
         }

locale = { cc: "US", lang: 'en' }

coordinates = { latitude: @latitude.to_s , longitude: @longitude.to_s }
 
Yelp.client.search_by_coordinates( coordinates, params, locale).businesses.each do |business| %>
       <p><%= business.name %></p>
       <p><%= business.rating %></p>
       <p><%= business.phone if business.respond_to?(:display_phone)%></p>
       <p><%= business.image_url if business.respond_to?(:image_url)
        image_tag business.image_url %></p> 
       <p><%= business.location.display_address %></p>
       <p><%= image_tag( business.rating_img_url_small) %></p>
       <p><%= business.snippet_text %>

      
      


<% end %>
